{
  "name": "Gitea",
  "description": "Lightweight self-hosted Git service",
  "icon": "https://gitea.io/favicon.png",
  "website": "https://gitea.io",
  "category": "devtools",
  "tags": ["git", "code", "devops", "github-alternative", "lightweight"],
  "inputs": {
    "domain": {
      "label": "Domain name",
      "placeholder": "git.example.com",
      "required": true,
      "type": "text",
      "description": "Your domain for accessing Gitea"
    }
  },
  "services": {
    "app": {
      "exposed": true,
      "stateless": false
    },
    "db": {
      "internal": true,
      "managed_option": "postgres"
    }
  }
}
