{
  "name": "Crater",
  "description": "Open source invoicing solution for freelancers and small businesses",
  "website": "https://crater.financial",
  "icon": "https://crater.financial/favicon.ico",
  "category": "invoicing",
  "tags": ["invoicing", "billing", "expenses", "estimates", "payments", "laravel"],
  "inputs": {
    "admin_email": {
      "label": "Admin Email",
      "placeholder": "admin@example.com",
      "required": true,
      "type": "email",
      "description": "Administrator email address"
    },
    "admin_password": {
      "label": "Admin Password",
      "placeholder": "password",
      "required": false,
      "type": "password",
      "description": "Administrator password"
    },
    "app_url": {
      "label": "App URL",
      "placeholder": "http://localhost:8080",
      "required": false,
      "type": "text",
      "default": "http://localhost:8080",
      "description": "Public URL for the Crater installation"
    }
  },
  "services": {
    "crater": {
      "exposed": true,
      "stateless": false
    },
    "crater-db": {
      "internal": true,
      "managed_option": "mysql"
    }
  }
}
